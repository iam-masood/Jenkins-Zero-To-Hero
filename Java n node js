pipeline {
    agent any
    
    stages {
        stage('Build') {
            steps {
                // Compile the Java code
                sh 'javac HelloWorld.java'
            }
        }
        stage('Test') {
            steps {
                // Run tests (if any)
                // You can add your test commands here
            }
        }
        stage('Deploy') {
            steps {
                // Execute the Java program
                sh 'java HelloWorld'
            }
        }
    }
}


